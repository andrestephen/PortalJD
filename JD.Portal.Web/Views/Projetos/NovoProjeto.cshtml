@using System.Web.Optimization

@model JD.Portal.Model.Projeto
@{
    ViewBag.Title = "Novo projeto";
    ViewBag.Description = "Área para cadastro de novo projeto";
}

@section ViewSpecificStyleSheet
{

}

@section breadcrumb
{
    <ol class="breadcrumb hidden-xs hidden-sm">
        <li><a href="@Url.Action("Index", "Projetos")"><i class="fa fa-thumbs-up"></i> Projetos</a></li>
        <li class="active">Novo projeto</li>
    </ol>
}


@{
    string nome = Model != null ? Model.Nome : "";
    string nomeBeneficiario = Model.BeneficiarioProjeto != null ? Model.BeneficiarioProjeto.Nome : "";
    string nomeContato = Model.BeneficiarioProjeto != null ? Model.BeneficiarioProjeto.NomeContato : ""; ;
    string emailContato = Model.BeneficiarioProjeto != null ? Model.BeneficiarioProjeto.EmailContato : ""; ;
    string telefonePrincipal = Model.BeneficiarioProjeto != null ? Model.BeneficiarioProjeto.TelefonePrincipal : "";
    string telefoneSecundario = Model.BeneficiarioProjeto != null ? Model.BeneficiarioProjeto.TelefoneSecundario : "";
    string endereco = Model.BeneficiarioProjeto != null ? Model.BeneficiarioProjeto.Endereco : "";
    string descricao = Model != null ? Model.Descricao : "";
}


<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Dados do projeto</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" action="@Url.Action("NovoProjeto", "Projetos")" method="post" name="frmNovoProjeto" ng-app="appProjeto" ng-controller="controllerProjeto">
                <div class="box-body">
                    @*<div class="row">
                        <div class="user-block col-xs-12" style="margin-bottom:15px; margin-top:15px">
                            <img class="img-circle img-bordered-sm" src="~/Content/img/user.jpg" alt="User Image">
                            <span class="description">Responsável<small> (Clique para trocar)</small></span>
                            <span class="username">
                                <a href="#">Diác. André Stephen</a>
                            </span>
                            <input type="hidden" name="DiaconoID" value="1" />
                            @{
                                //TODO: Carregar o diácono logado aqui
                            }
                        </div>
                    </div>*@
                    <div class="row">
                        <input type="hidden" name="DiaconoID" value="1" />
                        <div class="form-group col-md-6">
                            <label for="Pessoa_Nome">Nome do projeto <span>*</span></label>
                            <input type="text" class="form-control" id="Nome" name="Nome" value="@nome" maxlength="100" placeholder="Digite o nome do projeto" ng-model="Nome" ng-init="Nome='@nome'" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="Projeto_Beneficiario">Nome do Beneficiário (Instituição, igreja, pessoa, etc) <span>*</span></label>
                            <input type="text" class="form-control" id="BeneficiarioProjeto_Nome" name="BeneficiarioProjeto.Nome" value="@nomeBeneficiario" maxlength="250" placeholder="Digite o nome do beneficiário" ng-model="BeneficiarioProjeto_Nome" ng-init="BeneficiarioProjeto_Nome='@nomeBeneficiario'" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="Pessoa_Endereco">Endereço do beneficiário</label>
                            <input type="text" class="form-control" id="BeneficiarioProjeto_Endereco" name="BeneficiarioProjeto.Endereco" value="@endereco" placeholder="Digite o Endereço do beneficiário">
                        </div>
                    </div>
                    <div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="Projeto_NomeContato">Nome do contato</label>
                                <input type="text" class="form-control" id="BeneficiarioProjeto_NomeContato" name="BeneficiarioProjeto.NomeContato" value="@nomeContato" placeholder="Digite o nome do contato">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="Projeto_EmailContato">Email do contato</label>
                                <input type="text" class="form-control" id="BeneficiarioProjeto_EmailContato" name="BeneficiarioProjeto.EmailContato" value="@emailContato" placeholder="Digite o e-mail do contato">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="Projeto_TelefonePrincipal">Telefone Principal</label>
                            <input type="tel" class="form-control" id="BeneficiarioProjeto_TelefonePrincipal" name="BeneficiarioProjeto.TelefonePrincipal" value="@telefonePrincipal" placeholder="Digite o telefone principal" data-inputmask="'mask': '(99) 9999-9999[9]'" data-inputmask-clearincomplete="true" data-inputmask-showmaskonhover="false" data-inputmask-greedy="true" data-mask>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="Projeto_TelefoneSecundario">Telefone Secundário</label>
                            <input type="tel" class="form-control" id="BeneficiarioProjeto_TelefoneSecundário" name="BeneficiarioProjeto.TelefoneSecundario" value="@telefoneSecundario" placeholder="Digite o telefone secundário" data-inputmask="'mask': '(99) 9999-9999[9]'" data-inputmask-clearincomplete="true" data-inputmask-showmaskonhover="false" data-inputmask-greedy="true" data-mask>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <label>Descrição do projeto<span>*</span></label>
                            <textarea class="form-control" rows="10" id="Descricao" name="Descricao" placeholder="Descreva aqui qual é o objetivo do projeto." ng-model="Descricao" ng-init="Descricao='@descricao'" required>@descricao</textarea>
                        </div>
                    </div>
                    @*<div class="form-group">
                            <label for="exampleInputFile">File input</label>
                            <input type="file" id="exampleInputFile">

                            <p class="help-block">Example block-level help text here.</p>
                        </div>*@
                    @*<div class="checkbox">
                            <label>
                                <input type="checkbox"> Check me out
                            </label>
                        </div>*@
                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary col-xs-12 col-sm-6 col-md-3 col-lg-2">Salvar projeto</button>
                </div>

                @*AREA PARA TESTER O GET ASSINCRONO
                    <div>
                        <h2>Retorna Projeto</h2>
                        <a href="" ng-click="retornaProjeto()">Retorna Projeto</a>
                        <p>Id: {{projeto.ID}}</p>
                        <p>First Name: {{projeto.Nome}}</p>
                        <p>Last Name: {{projeto.Descricao}}</p>
                    </div>*@
            </form>
        </div>
    </div>
</div>


@section  ViewSpecificJavascript
{
    @Scripts.Render("~/Bundles/angular")
    @Scripts.Render("~/Bundles/controllerprojetos")
}